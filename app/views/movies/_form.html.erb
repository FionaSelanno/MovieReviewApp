<%= form_for @movie do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %><br>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description, cols:40 %><br />
    </p>
    <p>
      <%= f.label :rating %>
      <%= f.text_field :rating %><br>
    </p>
    <p>
      <%= f.label :released_on %>
      <%= f.date_field :released_on %><br />
    </p>
    <p>
      <%= f.label :total_gross %>
      <%= f.number_field :total_gross %>
    </p>
    <p>
      <%= f.label :director %>
      <%= f.text_field :director %>
    </p>
    <p>
      <%= f.label :cast %>
      <%= f.text_field :cast %>
    </p>
    <p>
      <%= f.label :duration %>
      <%= f.text_field :duration %>
    </p>
    <p>
      <%= f.label :image_file_name %>
      <%= f.text_field :image_file_name %>
    </p>
    <p> <%= f.submit %></p>
<%end%>
